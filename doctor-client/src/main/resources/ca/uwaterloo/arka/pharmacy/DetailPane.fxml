<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ca.uwaterloo.arka.pharmacy.DetailController"
      fx:id="detailPaneRoot"
      visible="false"
      prefHeight="Infinity" prefWidth="100000.0">
    <VBox VBox.vgrow="always">
        <Label text="Patient Detail" /> <!-- Title -->
        <HBox>
            <Label text="Patient name:" />
            <Text fx:id="nameText" />
            <TextField fx:id="nameField" managed="false" visible="false" />
        </HBox>
        <HBox>
            <Label text="Doctors:" />
            <Text fx:id="doctorsText" />
            <VBox fx:id="doctorsListContainer" managed="false" visible="false">
                <ListView fx:id="doctorsList" />
                <HBox>
                    <Button text="+" />
                    <Button text="-" />
                </HBox>
            </VBox>
        </HBox>
        <HBox>
            <Label text="Prescription IDs:" />
            <Text fx:id="prescriptionIdText" />
            <VBox fx:id="prescriptionIdListContainer" managed="false" visible="false">
                <ListView fx:id="prescriptionIdList" />
                <HBox>
                    <Button text="+" />
                    <Button text="-" />
                </HBox>
            </VBox>
        </HBox>
        <!-- TODO actually have a method to input/display face recognition data other than string -->
        <HBox>
            <Label text="Face recognition data:" />
            <Text fx:id="faceFingerprintDataText" />
            <TextField fx:id="faceFingerprintDataField" managed="false" visible="false" />
        </HBox>
    </VBox>
    <HBox VBox.vgrow="never">
        <Button fx:id="editBtn"
                text="Edit"
                onAction="#edit"
                prefWidth="100000.0" />
        <Button fx:id="deleteBtn"
                text="Delete"
                onAction="#delete"
                prefWidth="100000.0" />
        <Button fx:id="saveBtn"
                text="Save"
                onAction="#save"
                prefWidth="100000.0"
                managed="false" visible="false" />
        <Button fx:id="exitBtn"
                text="Exit"
                onAction="#exit"
                prefWidth="100000.0"
                managed="false" visible="false" />
    </HBox>
</VBox>
